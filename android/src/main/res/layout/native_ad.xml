<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mbridge.msdk.nativex.view.MBMediaView
        android:id="@+id/custom_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <com.mbridge.msdk.widget.MBAdChoice
        android:id="@+id/custom_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/custom_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        android:layout_toRightOf="@id/custom_icon"
        android:hint="Title"/>

    <TextView
        android:id="@+id/custom_desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/custom_icon"
        android:gravity="center_vertical"
        android:layout_below="@id/custom_title"
        android:visibility="gone"
        android:hint="Desc"/>

</RelativeLayout>
